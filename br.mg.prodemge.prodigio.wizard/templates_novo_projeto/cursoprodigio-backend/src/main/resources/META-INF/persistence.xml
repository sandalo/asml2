<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="cursoprodigio-ds" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java:/cursoprodigio-ds</non-jta-data-source>
		<!--ENTIDADES PRODIGIO-->
		
		<properties>
			<property name="jboss.entity.manager.jndi.name" value="java:/em" />
			<property name="jboss.entity.manager.factory.jndi.name" value="java:/emf/cursoprodigio" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>
		
	</persistence-unit>
</persistence> 

